# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    interval = 5
    colors = true  
    color_good =     '#d8dee9'
    color_degraded = '#d8dee9'
    color_bad =      '#d8dee9'
}

order += "wireless _first_"
order += "battery 0"
order += "disk /"
order += "load"
order += "memory"
order += "tztime local"

wireless _first_ {
        # format_up = "wifi: (%quality at %essid) %ip"
        format_up = "wifi quality %quality #"
        format_down = "wifi down #"
}

battery 0 {
        format = "%status %percentage #"
        format_down = "no battery"
        status_chr = "charging"
        status_bat = "battery"
        status_unk = "unknown"
        status_full = "full"
        path = "/sys/class/power_supply/macsmc-battery/uevent"
        low_threshold = 10
}

disk "/" {
        format = "free disk %avail #"
}

load {
        format = "load %1min #"
}

memory {
        format = "used memory %used # available memory %available #"
        threshold_degraded = "1G"
        format_degraded = "less than %available #"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
